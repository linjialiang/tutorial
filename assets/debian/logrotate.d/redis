echo "/server/logs/redis/redis-server.log {
    monthly
    maxsize 100M
    missingok
    rotate 12
    compress
    delaycompress
    dateext
    dateformat -%Y%m%d.%s
    dateyesterday
    create 0640 redis redis
    sharedscripts
    postrotate
        if [ -f /run/redis/process.pid ]; then
            /usr/bin/kill -USR1 \$(/bin/cat /run/redis/process.pid)
        fi
    endscript
}" > /etc/logrotate.d/redis