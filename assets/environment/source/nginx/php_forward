# /server/nginx/conf/custom/php_forward

location ~* \.php$
{
  # 唯一入口限制：非 /index.php 禁止访问
  location ~* ^(?!/index\.php$)
  {
    deny all;
  }

  # 转发的 php-fpm 版本
  fastcgi_pass                unix:/server/run/php/83.sock;

  # 根据文件名转发，完全不需要配置 fastcgi_index
  # fastcgi_index             index.php;

  # 载入官方最新版的 fastcgi_params
  include                     fastcgi.conf;
}
